<h1>Courses List</h1>
<div class="container course-wrapper">

{{#each courses}}
    <div class="card" style="width: 18rem;">
    <form action="/courses/delete/{{this._id}}" method="post">
    <button id="delete-course"><i class="fas fa-minus"></i></button>
    </form>   
    <img src={{this.previewImage}} class="card-img-top" alt="preview-image">
    <div class="card-body">
    <a href="/course/details/{{this.id}}" class="">
      <h5 class="card-title">{{this.code}}</h5>
      <p class="card-text">{{this.name}}</p>
        <p>{{this.term}}</p>  
      </a>
    </div>
  </div>
{{/each}}
</div>